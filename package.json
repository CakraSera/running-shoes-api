{
  "name": "running-shoes-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install && bun db:migrate:deploy && bun db:gen",
    "start": "bun run src/index.ts",
    "db:up": "docker compose up -d",
    "db:migrate": "prisma migrate dev && prisma generate --sql --no-hints",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:gen": "prisma generate --sql --no-hints",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio --browser none",
    "db:reset": "prisma migrate reset --skip-seed"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.0",
    "@prisma/client": "^6.12.0",
    "@scalar/hono-api-reference": "^0.9.11",
    "@sentry/bun": "^9.40.0",
    "@types/pg": "^8.15.4",
    "hono": "^4.8.3",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "slugify": "^1.6.6",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.0.10",
    "prisma": "^6.12.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
