generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "typedSql"]
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id          String  @id @default(ulid())
  slug        String  @unique
  name        String  @unique
  description String?
  websiteUrl  String?
  foundedYear Int?
  logoUrl     String?

  shoes Shoe[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shoe {
  id String @id @default(ulid())

  name String @unique
  slug String @unique

  generation  Int
  releaseDate DateTime
  description String?
  category    String?
  terrain     String?
  bestFor     String?
  imageUrl    String?

  brandId String
  Brand   Brand  @relation(fields: [brandId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
